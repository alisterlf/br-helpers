{
  "name": "br-helpers",
  "version": "1.0.0",
  "description": "Um conjunto de ferramentas específicas do Brasil",
  "keywords": [
    "cpf",
    "cnpj",
    "cep",
    "phone",
    "validator",
    "formatter",
    "TypeScript"
  ],
  "homepage": "https://github.com/alisterlf/br-helpers#readme",
  "bugs": {
    "url": "https://github.com/alisterlf/br-helpers/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alisterlf/br-helpers.git"
  },
  "license": "MIT",
  "author": "Álister Lopes Ferreira",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "/dist",
    "License.md",
    "README.md"
  ],
  "scripts": {
    "prebuild": "rimraf ./dist",
    "prepublish": "npm run build",
    "build": "tsc --project tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "npm run test:coverage",
    "test:watch": "jest --watch",
    "test:coverage": "jest --collect-coverage",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix"
  },
  "devDependencies": {
    "@types/jest": "^27.0.3",
    "@typescript-eslint/eslint-plugin": "^5.6.0",
    "@typescript-eslint/parser": "^5.6.0",
    "eslint": "^8.4.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.4.4",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.1.1",
    "tslib": "^2.3.1",
    "typescript": "^4.5.3"
  }
}
